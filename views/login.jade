doctype html
html
	head
		title Dashboard :: Login
		link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
		link(rel='stylesheet', href='stylesheets/style.css')
	body
		.login.well
			img(src='images/appbox.jpg')
			h2 Please log in...
			include messages
			hr
			form(id='login-form', method='POST', action='/login')
				.form-group
					label(for='username') Username
					input(type='text', name='username', class='form-control', id='username', 
						placeholder='Enter Username', required, data-required-msg='Username is required')
				.form-group
					label(for='password') Password
					input(type='password', name='password', class='form-control', id='password',
						placeholder='Enter password', required, data-required-msg='Password is required', minlength=8)
				.form-group
					button.btn.btn-default Login
					label(for='register') or
					a(href="register") Register

		script(src='//code.jquery.com/jquery-1.9.1.min.js')
		
	